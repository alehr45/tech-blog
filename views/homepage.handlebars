<ul class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a class="text2" href="{{post_url}}" target="_blank">{{title}}</a>
        <span class="span2" ({{post_url}})</span>
      </div>
      <div class="meta">
     by {{user.username}} on
        {{created_at}}
        
        <a class= "title2" href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ul>